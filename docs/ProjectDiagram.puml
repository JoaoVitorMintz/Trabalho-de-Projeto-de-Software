@startuml
title Diagrama de Projeto - Sistema de Monitoramento Agrícola

package "Camada de Usuário e Autenticação" {
  [Usuario]
  [Administrador]
  [Operador]
  [Autorizacao]
}

package "Camada de Operação de Drones" {
  [Drone]
  [Checklist]
  [MissoesVoo]
}

package "Camada de Sensoriamento" {
  [Sensor]
  [SensorTemperatura]
  [SensorUmidade]
  [SensorInfravermelho]
}

package "Camada de Dados e Relatórios" {
  [RegistroDados]
  [Relatorio]
}

package "Camada de Gestão de Áreas" {
  [CadastroArea]
}

' =============================
' Relações entre módulos
' =============================
[Usuario] --> [Autorizacao] : autentica-se
[Administrador] --> [Usuario] : gerencia
[Operador] --> [MissoesVoo] : executa missão

[MissoesVoo] --> [Drone] : controla
[MissoesVoo] --> [CadastroArea] : define área
[MissoesVoo] --> [RegistroDados] : coleta dados

[Drone] --> [Sensor] : lê dados
[Sensor] <|-- [SensorTemperatura]
[Sensor] <|-- [SensorUmidade]
[Sensor] <|-- [SensorInfravermelho]

[RegistroDados] --> [Relatorio] : gera
[Checklist] --> [MissoesVoo] : valida antes do voo

@enduml
