@startuml
actor Administrador as admin
participant "Sistema" as sys
database "Banco de Dados" as DB
participant "CadastroArea" as area

title Diagrama de Sequência – Cadastro de Área Agrícola (Administrador)

admin -> sys : fazerLogin(email, senha)
sys -> DB : validarCredenciais(email, senha)
DB --> sys : statusLogin(ok)

alt Login válido
  admin -> sys : cadastrarArea(tamanho, localizacao, tipoCultivo)
  sys -> area : criarArea(tamanho, localizacao, tipoCultivo)
  area --> sys : areaCriada()

  sys -> area : validarLocalizacao(localizacao)
  alt Localização válida
    sys -> area : validarTipoCultivo(tipoCultivo)
    alt Tipo de cultivo válido
      sys -> DB : salvarArea(area)
      DB --> sys : confirmacaoCadastro()
      sys --> admin : mensagemSucesso("Área agrícola cadastrada com sucesso")
    else Tipo de cultivo inválido
      sys --> admin : mensagemErro("Tipo de cultivo não reconhecido")
    end
  else Localização inválida
    sys --> admin : mensagemErro("Localização fora da área permitida")
  end

else Login inválido
  sys --> admin : mensagemErro("Credenciais incorretas")
end
@enduml
